{
  "typescript.tsdk": "apps/web/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.preferences.useAliasesForRenames": false,
  "javascript.referencesCodeLens.enabled": true,
  "editor.codeLens": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 120,
  "editor.wrappingIndent": "indent",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "pokemmo.path": "C:\\Program Files\\PokeMMO",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx2G -Xms100m -Xlog:disable",
  "kotlin.compiler.jvm.target": "17",
  "kotlin.languageServer.enabled": true,
  "kotlin.debugAdapter.enabled": true,
  "java.import.gradle.enabled": true,
  "java.import.gradle.wrapper.enabled": true,
  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "apps/agent/build": true,
    "apps/agent/.gradle": true
  },
  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "apps/agent/build": true,
    "apps/agent/.gradle": true,
    "apps/web/data/dump-*.json": true
  },
  "files.watcherExclude": {
    "**/.next/**": true,
    "**/node_modules/**": true,
    "apps/agent/build/**": true,
    "apps/agent/.gradle/**": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.test.ts, ${capture}.spec.ts",
    "*.tsx": "${capture}.test.tsx, ${capture}.spec.tsx, ${capture}.module.css",
    "package.json": "package-lock.json, tsconfig.json, next.config.ts, tailwind.config.ts, postcss.config.mjs, eslint.config.mjs, prettier.config.*, .prettierrc*, .prettierignore, .eslintrc*, .eslintignore",
    "build.gradle.kts": "settings.gradle.kts, gradle.properties, gradlew, gradlew.bat"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[kotlin]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "fwcd.kotlin"
  },
  "[java]": {
    "editor.tabSize": 4
  },
  "eslint.workingDirectories": ["apps/web"],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "tailwind-fold.autoFold": true,
  "tailwind-fold.foldStyle": "QUOTES",
  "tailwind-fold.unfoldIfLineSelected": true,
  "tailwind-fold.showTailwindImage": true,
  "tailwind-fold.foldedText": "...",
  "tailwind-fold.foldedTextColor": "#6366f1",
  "tailwind-fold.foldedTextBackgroundColor": "#1e293b20",
  "tailwind-fold.unfoldedTextOpacity": 0.6,
  "tailwind-fold.supportedLanguages": [
    "typescriptreact",
    "javascriptreact",
    "typescript",
    "javascript",
    "html"
  ],
  "tailwind-fold.foldLengthThreshold": 60
}
